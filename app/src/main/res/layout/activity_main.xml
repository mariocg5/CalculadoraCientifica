<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:id="@+id/PantallaSecundaria"
        android:background="@color/dark_grey"
        android:gravity="bottom"
        android:maxLines="1"
        android:padding="10dp"
        android:paddingTop="30dp"
        android:text=""
        android:textAlignment="viewEnd"
        android:textColor="@color/white"
        android:textSize="15sp"
        tools:ignore="RtlCompat" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:id="@+id/PantallaPrimaria"
        android:layout_below="@+id/PantallaSecundaria"
        android:background="@color/black_3"
        android:gravity="bottom"
        android:maxLines="1"
        android:paddingTop="10dp"
        android:text=""
        android:textAlignment="viewEnd"
        android:textColor="@color/white"
        android:textSize="50sp"
        tools:ignore="RtlCompat"/>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/PantallaPrimaria"
        android:background="@color/black_1"
        app:cardBackgroundColor="@color/black_1"
        app:cardCornerRadius="4dp"
        app:cardElevation="2dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:weightSum="7"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:weightSum="4"
                android:background="@color/dark_grey"
                >

                <Button
                    android:id="@+id/BotonBorraTodo"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="3dp"
                    android:layout_weight="1"
                    android:background="@color/black"
                    android:padding="6dp"
                    android:text="AC"
                    android:textColor="@color/yellow"
                    android:textColorLink="@color/black"
                    android:textSize="25sp"
                     />
                <Button
                    android:layout_width="0dp"
                    android:id="@+id/BotonBorraUno"
                    android:layout_height="wrap_content"
                    android:layout_margin="3dp"
                    android:layout_weight="1"
                    android:background="@color/black_2"
                    android:padding="6dp"
                    android:text="C"
                    android:textColor="@color/yellow"
                    android:textSize="25sp"/>
                <Button
                    android:layout_width="0dp"
                    android:id="@+id/BotonAbreParentesis"
                    android:layout_height="wrap_content"
                    android:layout_margin="3dp"
                    android:layout_weight="1"
                    android:background="@color/black_2"
                    android:padding="6dp"
                    android:text="("
                    android:textColor="@color/yellow"
                    android:textSize="25sp"/>
                <Button
                    android:layout_width="0dp"
                    android:id="@+id/BotonCierraParentesis"
                    android:layout_height="wrap_content"
                    android:layout_margin="3dp"
                    android:layout_weight="1"
                    android:background="@color/black_2"
                    android:padding="6dp"
                    android:text=")"
                    android:textColor="@color/yellow"
                    android:textSize="25sp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:weightSum="5"
                android:background="@color/dark_grey"
                >
                <Button
                    android:layout_width="0dp"
                    android:id="@+id/BotonSeno"
                    android:layout_height="wrap_content"
                    android:layout_margin="3dp"
                    android:layout_weight="1"
                    android:background="@color/black_2"
                    android:padding="6dp"
                    android:text="sin"
                    android:textColor="@color/yellow"
                    android:textSize="25sp"/>
                <Button
                    android:layout_width="0dp"
                    android:id="@+id/BotonCoseno"
                    android:layout_height="wrap_content"
                    android:layout_margin="3dp"
                    android:layout_weight="1"
                    android:background="@color/black_2"
                    android:padding="6dp"
                    android:text="cos"
                    android:textColor="@color/yellow"
                    android:textSize="25sp"/>
                <Button
                    android:layout_width="0dp"
                    android:id="@+id/BotonTangente"
                    android:layout_height="wrap_content"
                    android:layout_margin="3dp"
                    android:layout_weight="1"
                    android:background="@color/black_2"
                    android:padding="6dp"
                    android:text="tan"
                    android:textColor="@color/yellow"
                    android:textSize="25sp"/>
                <Button
                    android:layout_width="0dp"
                    android:id="@+id/BotonLogaritmo"
                    android:layout_height="wrap_content"
                    android:layout_margin="3dp"
                    android:layout_weight="1"
                    android:background="@color/black_2"
                    android:padding="6dp"
                    android:text="log"
                    android:textColor="@color/yellow"
                    android:textSize="25sp"/>
                <Button
                    android:layout_width="0dp"
                    android:id="@+id/BotonNeperiano"
                    android:layout_height="wrap_content"
                    android:layout_margin="3dp"
                    android:layout_weight="1"
                    android:background="@color/black_2"
                    android:padding="6dp"
                    android:text="ln"
                    android:textColor="@color/yellow"
                    android:textSize="25sp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:weightSum="5"
                android:background="@color/dark_grey"
                >
                <Button
                    android:layout_width="0dp"
                    android:id="@+id/BotonFactorial"
                    android:layout_height="wrap_content"
                    android:layout_margin="3dp"
                    android:layout_weight="1"
                    android:background="@color/black_2"
                    android:padding="6dp"
                    android:text="x!"
                    android:textColor="@color/yellow"
                    android:textSize="25sp"/>
                <Button
                    android:layout_width="0dp"
                    android:id="@+id/BotonCuadrado"
                    android:layout_height="wrap_content"
                    android:layout_margin="3dp"
                    android:layout_weight="1"
                    android:background="@color/black_2"
                    android:padding="6dp"
                    android:text="x^2"
                    android:textColor="@color/yellow"
                    android:textSize="25sp"/>
                <Button
                    android:layout_width="0dp"
                    android:id="@+id/BotonRaizCuadrada"
                    android:layout_height="wrap_content"
                    android:layout_margin="3dp"
                    android:layout_weight="1"
                    android:background="@color/black_2"
                    android:padding="6dp"
                    android:text="√"
                    android:textColor="@color/yellow"
                    android:textSize="25sp"/>
                <Button
                    android:layout_width="0dp"
                    android:id="@+id/BotonInversa"
                    android:layout_height="wrap_content"
                    android:layout_margin="3dp"
                    android:layout_weight="1"
                    android:background="@color/black_2"
                    android:padding="6dp"
                    android:text="1/x"
                    android:textColor="@color/yellow"
                    android:textSize="25sp"/>
                <Button
                    android:layout_width="0dp"
                    android:id="@+id/BotonDivision"
                    android:layout_height="wrap_content"
                    android:layout_margin="3dp"
                    android:layout_weight="1"
                    android:background="@color/black_2"
                    android:padding="6dp"
                    android:text="÷"
                    android:textColor="@color/yellow"
                    android:textSize="25sp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:weightSum="4"
                android:background="@color/dark_grey"
                >
                <Button
                    android:layout_width="0dp"
                    android:id="@+id/BotonNum7"
                    android:layout_height="wrap_content"
                    android:layout_margin="3dp"
                    android:layout_weight="1"
                    android:background="@color/black_2"
                    android:padding="6dp"
                    android:text="7"
                    android:textColor="@color/white"
                    android:textSize="25sp"/>
                <Button
                    android:layout_width="0dp"
                    android:id="@+id/BotonNum8"
                    android:layout_height="wrap_content"
                    android:layout_margin="3dp"
                    android:layout_weight="1"
                    android:background="@color/black_2"
                    android:padding="6dp"
                    android:text="8"
                    android:textColor="@color/white"
                    android:textSize="25sp"/>
                <Button
                    android:layout_width="0dp"
                    android:id="@+id/BotonNum9"
                    android:layout_height="wrap_content"
                    android:layout_margin="3dp"
                    android:layout_weight="1"
                    android:background="@color/black_2"
                    android:padding="6dp"
                    android:text="9"
                    android:textColor="@color/white"
                    android:textSize="25sp"/>
                <Button
                    android:layout_width="0dp"
                    android:id="@+id/BotonMultiplicacion"
                    android:layout_height="wrap_content"
                    android:layout_margin="3dp"
                    android:layout_weight="1"
                    android:background="@color/black_2"
                    android:padding="6dp"
                    android:text="x"
                    android:textColor="@color/yellow"
                    android:textSize="25sp"/>


            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:weightSum="4"
                android:background="@color/dark_grey"
                >
                <Button
                    android:layout_width="0dp"
                    android:id="@+id/BotonNum4"
                    android:layout_height="wrap_content"
                    android:layout_margin="3dp"
                    android:layout_weight="1"
                    android:background="@color/black_2"
                    android:padding="6dp"
                    android:text="4"
                    android:textColor="@color/white"
                    android:textSize="25sp"/>
                <Button
                    android:layout_width="0dp"
                    android:id="@+id/BotonNum5"
                    android:layout_height="wrap_content"
                    android:layout_margin="3dp"
                    android:layout_weight="1"
                    android:background="@color/black_2"
                    android:padding="6dp"
                    android:text="5"
                    android:textColor="@color/white"
                    android:textSize="25sp"/>
                <Button
                    android:layout_width="0dp"
                    android:id="@+id/BotonNum6"
                    android:layout_height="wrap_content"
                    android:layout_margin="3dp"
                    android:layout_weight="1"
                    android:background="@color/black_2"
                    android:padding="6dp"
                    android:text="6"
                    android:textColor="@color/white"
                    android:textSize="25sp"/>
                <Button
                    android:layout_width="0dp"
                    android:id="@+id/BotonResta"
                    android:layout_height="wrap_content"
                    android:layout_margin="3dp"
                    android:layout_weight="1"
                    android:background="@color/black_2"
                    android:padding="6dp"
                    android:text="-"
                    android:textColor="@color/yellow"
                    android:textSize="25sp"/>


            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:weightSum="4"
                android:background="@color/dark_grey"
                >
                <Button
                    android:layout_width="0dp"
                    android:id="@+id/BotonNum1"
                    android:layout_height="wrap_content"
                    android:layout_margin="3dp"
                    android:layout_weight="1"
                    android:background="@color/black_2"
                    android:padding="6dp"
                    android:text="1"
                    android:textColor="@color/white"
                    android:textSize="25sp"/>
                <Button
                    android:layout_width="0dp"
                    android:id="@+id/BotonNum2"
                    android:layout_height="wrap_content"
                    android:layout_margin="3dp"
                    android:layout_weight="1"
                    android:background="@color/black_2"
                    android:padding="6dp"
                    android:text="2"
                    android:textColor="@color/white"
                    android:textSize="25sp"/>
                <Button
                    android:layout_width="0dp"
                    android:id="@+id/BotonNum3"
                    android:layout_height="wrap_content"
                    android:layout_margin="3dp"
                    android:layout_weight="1"
                    android:background="@color/black_2"
                    android:padding="6dp"
                    android:text="3"
                    android:textColor="@color/white"
                    android:textSize="25sp"/>
                <Button
                    android:layout_width="0dp"
                    android:id="@+id/BotonSuma"
                    android:layout_height="wrap_content"
                    android:layout_margin="3dp"
                    android:layout_weight="1"
                    android:background="@color/black_2"
                    android:padding="6dp"
                    android:text="+"
                    android:textColor="@color/yellow"
                    android:textSize="25sp"/>


            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:weightSum="4"
                android:background="@color/dark_grey"
                >
                <Button
                    android:layout_width="0dp"
                    android:id="@+id/BotonNumPi"
                    android:layout_height="wrap_content"
                    android:layout_margin="3dp"
                    android:layout_weight="1"
                    android:background="@color/black_2"
                    android:padding="6dp"
                    android:text="π"
                    android:textColor="@color/white"
                    android:textSize="25sp"/>
                <Button
                    android:layout_width="0dp"
                    android:id="@+id/BotonNum0"
                    android:layout_height="wrap_content"
                    android:layout_margin="3dp"
                    android:layout_weight="1"
                    android:background="@color/black_2"
                    android:padding="6dp"
                    android:text="0"
                    android:textColor="@color/white"
                    android:textSize="25sp"/>
                <Button
                    android:layout_width="0dp"
                    android:id="@+id/BotonPunto"
                    android:layout_height="wrap_content"
                    android:layout_margin="3dp"
                    android:layout_weight="1"
                    android:background="@color/black_2"
                    android:padding="6dp"
                    android:text="."
                    android:textColor="@color/white"
                    android:textSize="25sp"/>
                <Button
                    android:layout_width="0dp"
                    android:id="@+id/BotonIgual"
                    android:layout_height="wrap_content"
                    android:layout_margin="3dp"
                    android:layout_weight="1"
                    android:background="@color/black_2"
                    android:padding="6dp"
                    android:text="="
                    android:textColor="@color/yellow"
                    android:textSize="25sp"/>


            </LinearLayout>


        </LinearLayout>
    </androidx.cardview.widget.CardView>




</RelativeLayout>